<div id="purchase_content">
  <div class="purchase_process back">
    <div id="purchase_step" style="padding: 20px;"> 
      <p class="purchase_process_font" style="color:#CD5C5C;">①お買い物カート</p>
      <p class="purchase_process_font">></p>
      <p class="purchase_process_font">②配送情報</p>
      <p class="purchase_process_font">></p>
      <p class="purchase_process_font">③注文する</p>
      <p class="purchase_process_font">></p>
      <p class="purchase_process_font">④完了</p>
    </div>
  </div>
  <div id="purchase_product" class="back" style="width: 100%; height:200px; margin: 30px 0 0 0;">
    <div class="product_image" style="margin: 10px;">
      <img src="/image.png" width="150">
    </div>
    <div class="product_info">
      <h3>Product name</h3>
      <hr width="140">
      <p class="info_char" style="color:black;">出荷所要日数</p>
      <hr width="140">
      <p class="info_char" style="color:black;">お支払いより15日以内</P>
      <hr width="140">
    </div>
  </div>
  <div id="split_content">
    <div id="spacial" class="left_box" style="margin: 30px 0 0 0;">
    現在使えるspecialはないよん 
    </div>
    <div id="purchase_confirm" style="width: 50%; height:300px; background: #FFFAFA; margin: 30px 0 0 40px; float: left;">
      <p style="font-size: 18px; font-weight:bold; ">ご注文</p>
      <div class="count_product">
        <hr size="1" color="#999999" style="border-style:dotted" width="140"> 
        <p style="display: inline;">合計</p><p style="display: inline;"><%= @item.price %>円</p>
        <hr size="1" color="#999999" style="border-style:dotted" width="140">
        <p style="display: inline;">配送料</p><p style="display: inline;">200円</p>
        <hr size="1" color="#999999" style="border-style:dotted" width="140">
        <p style="display: inline;">手数料</p><p style="display: inline;">0円</p>
        <hr size="1" color="#999999" width="140">
      </div> 
       <a href="/purchase/detail"><button id="continue" class="btn btn-danger btn-large">注文する</button></a>
    </div>
  </div>
</div>
